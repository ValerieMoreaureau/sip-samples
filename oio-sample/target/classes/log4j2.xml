<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR">
  <Properties>
    <Property name="filename">logs/oio.log</Property>
  </Properties>
  <Appenders>  
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}.%M():%L - %msg%n"/>
    </Console>
    <File name="File" fileName="${filename}">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}.%M():%L - %msg%n"/>
    </File>
  </Appenders>
  <Loggers>
    <Logger name="gov.nist" level="ERROR" additivity="false"/>
    <Logger name="com.mobius.software.oio" level="ERROR" additivity="false"/>
    <Logger name="com.mobius.software.oio.multithreading" level="ERROR" additivity="false"/>
    <Logger name="com.mobius.software.oio.singlethread" level="ERROR" additivity="false"/>
        
    <Root level="ERROR">
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>
</Configuration>
